---
interface Props {
  title: string;
  url: string;
  pubDate: Date;
}

const { title, url, pubDate } = Astro.props;

// Format the date to match the screenshot
const formattedDate = pubDate.toLocaleDateString('en-us', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<div class="post">
  <div class="post-content">
    <span class="arrow">â†’</span>
    <a href={url} class="post-title">{title}</a>
  </div>
  <time class="date">{formattedDate}</time>
</div>

<style>
  .post {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 1rem;
    padding: 0.25rem 1rem;
  }

  .post-content {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .arrow {
    font-family: monospace;
  }

  .post-title {
    color: #000;
    text-decoration: none;
  }

  .post-title:hover {
    text-decoration: underline;
  }

  .date {
    font-family: "Times New Roman", Times, serif;
    font-style: italic;
    color: #666;
  }
</style>