---
const currentPath = Astro.url.pathname;

const links = [
  { href: '/', text: 'home' },
  { href: '/writing', text: 'writing' },
  { href: '/tools', text: 'tools' },
  { href: '/about', text: 'about' }
];
---

<nav>
  {links.map(link => (
    <a
      href={link.href}
      class={currentPath.startsWith(link.href) && link.href !== '/' ? 'active' : currentPath === link.href && link.href === '/' ? 'active' : ''}
    >
      {link.text}
    </a>
  ))}
</nav>

<style>
  nav {
    display: flex;
    gap: 1rem;
    border-bottom: 1px solid var(--border-color, #ddd);
    margin-bottom: 2rem;
    padding-bottom: 1rem;
  }

  nav a {
    font-size: 1.2rem;
    color: var(--link-color, #1a1a1a);
    text-decoration: none;
  }

  nav a:hover {
    text-decoration: underline;
  }

  nav a.active {
    font-weight: bold;
  }

  @media (max-width: 600px) {
    nav {
      flex-direction: column;
      gap: 0.5rem;
    }

    nav a {
      font-size: 1rem;
    }
  }
</style>
